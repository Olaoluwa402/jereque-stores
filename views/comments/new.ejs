<div class="container">
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
            <h2 style="text-align: center">Add Comment</h2>
            <form action="/blog/<%= blog.slug %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                <input class="form-control"  type="hidden" name="_csrf" value="<%= csrfToken%>">
            </form>
            <a href="/blog">Go Back</a>
        </div>
    </div>
</div>