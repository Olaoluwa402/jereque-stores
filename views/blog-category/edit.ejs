<diV class="container">
<div class="row">
  <div class="w-50 mx-auto formtag"> 
    <h2 class="" style="text-align: center"> Edit Blog Category </h2>
    <form action="/blog-category/<%= cate.id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name"></label>
        <input class="form-control" id="uname" type="text" name="name" value="<%= cate.name %>" >
      </div>
      <input class="form-control"  type="hidden" name="_csrf" value="<%= csrfToken%>">
        <button type="submit" class="btn btn-lg  btn-block customBtn" style="">Update</button>
    </form>
    <a type="button" href="/blog-category">Cancel</a>
  </div> 
</div>
</diV>
